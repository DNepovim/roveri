<!DOCTYPE html>

{default $description = ''}
{default $keywords = ''}
{default $activeLang = 'cs'}

<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">

	<title>{site_title()}</title>

	<meta name="description" content="{$description}">
	<meta name="keywords" content="{$keywords}">

	{use_google_fonts([ 'Source+Sans+Pro:400,400i,700,700i&amp;subset=latin-ext'])}

	<link rel="stylesheet" href="{$assetsPath}/styles/{$buildstamp}index.css" media="screen">
	<link rel="stylesheet" href="{$assetsPath}/styles/{$buildstamp}print.css" media="print">

	<link rel="icon" type="image/png" href="{$assetsPath}/favicon.png" sizes="16x16">
	<link rel="icon" type="image/png" href="{$assetsPath}/favicon-32x32.png" sizes="32x32">

	<!--[if lt IE 9]>
	<link rel="stylesheet" href="{$assetsPath}/styles/{$buildstamp|noescape}oldie.css" media="screen">
	<script src="{$assetsPath}/node_modules/lt-ie-9/lt-ie-9.min.js"></script>
	<![endif]-->

	<script>
		initComponents = [
			{ name: 'shapes', data: { url: {$assetsPath}+'/images/shapes.svg' } }
		]
	</script>

	{wp_head()}

</head>
<body>

	{$mangoSnippet}

	<div class="container">
		<div class="row">

			<nav class="yeah-3">
				{include components/shape.latte name => logo}
			</nav>

			{block content}{/block}

		</div>
	</div>

	{block scripts}
		{analytics()}
		{*eu_cookies($activeLang)*}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js" defer></script>
		<script src="{$assetsPath}/scripts/{$buildstamp}index.js" defer></script>
	{/block}

	{wp_footer()}

</body>
</html>
